<Page
    x:Class="VirtualGuide.Mobile.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VirtualGuide.Mobile.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" 
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20,0">
            <TextBlock x:Uid="UsernameLabel" Text="Username" />
            <TextBox x:Name="Username" TextWrapping="Wrap" />
            <TextBlock x:Uid="PasswordLabel" Text="Password" />
            <PasswordBox x:Name="Password" />
            <Button x:Uid="LoginButton" Content="Login" HorizontalAlignment="Stretch" Click="LoginButton_Click" />

            <TextBlock x:Uid="NoAccount" Text="Don't have and account?" Margin="0,50,0,0" />
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Uid="Register" Text="Register" Foreground="{StaticResource LightGreen}" />
                <TextBlock x:Uid="or" Text="or" Margin="7,0" />
                <TextBlock x:Uid="SkipLogin" Text="Skip login" Foreground="{StaticResource LightGreen}" Tapped="SkipLogin_Tapped" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>